---
import HeaderImage from "../../components/HeaderImage.astro";
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
---

<Layout title="Welcome to Astro.">
  <main
    class="text-white min-h-screen h-screen flex flex-row items-start lg:flex-col lg:items-start lg:justify-around"
  >
    <HeaderImage />
    <div
      class="wrapper flex flex-row lg:flex-col h-full w-full ml-[34%] lg:ml-[16%]"
    >
      <div
        class="first-collection relative w-full flex flex-col lg:flex-row lg:h-full items-center justify-around"
      >
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
      </div>
      <div
        class="second-collection w-full flex flex-col lg:flex-row lg:h-full items-center justify-around"
      >
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
      </div>
      <div
        class="third-collection w-full flex flex-col lg:flex-row lg:h-full items-center justify-around"
      >
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
        <img class="w-20 h-20 md:w-32 md:h-32" src="/benji.png" />
      </div>
    </div>
    <Header />
  </main>
</Layout>

<style>
  .wrapper img {
    opacity: 0;
    scale: 0.5;
  }
</style>

<script>
  import gsap from "gsap";

  gsap.to(".wrapper img", {
    duration: 0.5,
    opacity: 1,
    scale: 1,
    delay: 0.2,
    ease: "sine.out",
    force3D: true,
    stagger: {
      grid: [3, 7],
      from: "center",
      amount: 1.5,
    },
  });
</script>
