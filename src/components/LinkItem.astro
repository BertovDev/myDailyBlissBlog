---
import FormatedDate from "./FormatedDate.astro";
const { title, description, imageUrl, url, ...style } = Astro.props;
---

<a href={url} target="_blank" class="group block cursor-pointer px-3 md:py-0">
  <li
    class="block group-hover:bg-neutral-900 py-3 my-2 pl-1 border-b border-zinc-400/60 transition-colors"
  >
    <div class="flex items-start justify-between">
      <div class="flex flex-col">
        <h1
          class="pb-0 text-3xl xl:text-xl font-bold tracking-wide uppercase group-hover:text-primary transition-colors font-mono"
        >
          {title}
        </h1>

        <p class="text-base xl:text-lg xl:tracking-wider text-neutral-500">
          {description}
        </p>
      </div>
    </div>
  </li>
</a>
