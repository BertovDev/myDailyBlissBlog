---
import FormatedDate from "./FormatedDate.astro";
const { title, description, imageUrl, url, ...style } = Astro.props;
---

<a
  href={url}
  class="group block cursor-pointer px-3 mx-3 pb-5 border-b border-dashed"
>
  <li class="block group-hover:bg-neutral-900 p-2 transition-colors">
    <div class="flex items-start justify-between">
      <div class="flex flex-col gap-y-2 2xl:gap-y-5">
        <div class="flex flex-row items-center gap-x-2">
          <h1
            class="text-2xl 2xl:text-4xl font-bold tracking-wide uppercase group-hover:text-primary transition-colors font-mono"
          >
            {title}
          </h1>
          <span
            class="text-primary text-2xl font-bold group-hover:text-white transition-colors font-mono"
            >**</span
          >
        </div>

        <p class="text-lg">
          {description}
        </p>
      </div>
    </div>
  </li>
</a>
