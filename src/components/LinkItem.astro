---
import FormatedDate from "./FormatedDate.astro";
const { title, description, imageUrl, url, ...style } = Astro.props;
---

<a href={url} class="group block cursor-pointer px-3 md:py-0">
  <li
    class="block group-hover:bg-neutral-900 py-3 my-3 pl-1 border-b-4 transition-colors"
  >
    <div class="flex items-start justify-between">
      <div class="flex flex-col">
        <h1
          class="text-3xl xl:text-2xl font-bold tracking-wide uppercase group-hover:text-primary transition-colors font-mono"
        >
          {title} *
        </h1>

        <p class="text-lg xl:text-xl text-neutral-500">
          {description}
        </p>
      </div>
    </div>
  </li>
</a>
