---
import { getCollection } from "astro:content";
import { type CollectionEntry } from "astro:content";
import BlogItem from "./BlogItem.astro";
import FormatedDate from "./FormatedDate.astro";

let posts = await getCollection("blog");

type BlogCollectionEntry = CollectionEntry<"blog">;

const { titleName } = Astro.props;
---

<div class="grid grid-cols-2 w-[90%] gap-x-10 ml-1 mt-10 overflow-auto">
  {
    posts.map((el) => {
      return <BlogItem slug={el.slug} {...el.data} />;
    })
  }
</div>
