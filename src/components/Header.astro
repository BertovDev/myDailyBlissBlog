---
import { SITE_TITLE } from "../../consts";
import Picture from "astro/components/Picture.astro";
import headerImage from "./public/ComponentMobile.png";
---

<header class="mb-10">
  <div class="title py-3 flex flex-col">
    <Picture src={headerImage} alt="Header image" />
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <h2>Welcome</h2>
  </div>
  <hr />
</header>

<style>
  .title {
    display: flex;
    justify-content: space-between;
  }
  .title h2:nth-child(2) {
    color: #ffebcd;
  }
</style>
