---
import { SITE_TITLE } from "../../consts";
---

<header class="mb-10">
  <div class="title py-2 flex flex-row lg:flex-col">
    <div class="flex flex-col lg:flex-row justify-between">
      <ul class="flex flex-row gap-5">
        <h2 class="text-xl lg:text-2xl hover:text-primary">
          <a href="/">{SITE_TITLE}</a>
        </h2>
        <li
          class="text-xl flex gap-1 lg:gap-x-3 flex-row text-primary hover:text-white"
        >
          <span class="text-white">|</span>
          <a href="/blog"> Blogs</a>
        </li>
        <li
          class="text-xl flex gap-1 lg:gap-x-3 flex-row text-primary hover:text-white"
        >
          <span class="text-white">|</span>
          <a href=""> Music</a>
        </li>
      </ul>
      <h2 class="text-[#ffebcd] text-lg lg:text-xl">Welcome</h2>
    </div>
  </div>
  <hr />
</header>

<style>
  .title {
    display: flex;
    justify-content: space-between;
  }
  .title h2:nth-child(2) {
    color: #ffebcd;
  }
</style>
