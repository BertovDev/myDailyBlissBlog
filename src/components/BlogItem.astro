---
import FormatedDate from "./FormatedDate.astro";
const { title, slug, pubDate, description, imageUrl, url, ...style } =
  Astro.props;
---

<a
  href={slug !== "" ? `/blog/${slug}/` : url}
  class="group block cursor-pointer px-3 py-2 md:py-0 border-b lg:border-r border-dashed"
>
  <li class="block group-hover:bg-neutral-900 p-2 transition-colors">
    <div class="flex items-start justify-between">
      <div class="flex flex-col lg:gap-y-5 gap-y-2">
        <div
          class="text-xl md:text-2xl 2xl:text-3xl tracking-[0.2em] text-neutral-500"
        >
          <FormatedDate date={pubDate} />
        </div>
        <h1
          class="text-2xl md:text-3xl xl:text-4xl 2xl:text-5xl font-bold tracking-wide uppercase group-hover:text-primary transition-colors font-mono"
        >
          {title}
        </h1>

        <p class="text-lg xl:text-xl xl:tracking-wider xl:mb-24">
          {description}
        </p>
      </div>
    </div>
  </li>
</a>
