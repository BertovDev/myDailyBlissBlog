---
import FormatedDate from "./FormatedDate.astro";
const { title, slug, pubDate, description, imageUrl, url, ...style } =
  Astro.props;
---

<a
  href={slug !== "" ? `/blog/${slug}/` : url}
  class="group block cursor-pointer px-3 md:py-0"
>
  <li
    class="block group-hover:bg-neutral-900 py-3 my-3 pl-1 border-b transition-colors"
  >
    <div class="flex flex-col">
      <div class="w-full flex flex-row gap-x-5">
        <h1
          class="text-3xl xl:text-2xl tracking-wider font-bold uppercase group-hover:text-primary transition-colors font-mono"
        >
          {title} *
        </h1>
      </div>

      <p class="text-lg xl:text-xl xl:tracking-wider text-neutral-500">
        {description}
      </p>
    </div>
  </li>
</a>
