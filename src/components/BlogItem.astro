---
import FormatedDate from "./FormatedDate.astro";
const { title, slug, pubDate, description, imageUrl, url, ...style } =
  Astro.props;
---

<li
  class="flex gap-y-2 mb-5 flex-col gap-x-10 mt-7 items-start justify-start text-gray-200"
>
  <a
    class="flex gap-x-2 items-center font-montserrat text-lg md:text-2xl 2xl:text-3xl font-bold underline underline-offset-4 hover:text-primary-50 duration-300"
    href={slug !== "" ? `/blog/${slug}/` : url}
  >
    {title}
    <img
      src={slug !== "" ? "/post.svg" : "/link.svg"}
      alt="link"
      class="w-[20px] lg:w-[30px]"
    />
  </a>
  {slug !== "" ? <FormatedDate date={pubDate} /> : ""}

  <p
    class="pl-1 text-base md:text-xl 2xl:text-xl font-mono opacity-70 w-full lg:w-3/4"
  >
    {description}.
  </p>
</li>
