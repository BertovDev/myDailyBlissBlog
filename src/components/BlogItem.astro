---
import FormatedDate from "./FormatedDate.astro";
const { title, slug, pubDate, description, imageUrl, url, ...style } =
  Astro.props;
---

<a
  href={slug !== "" ? `/blog/${slug}/` : url}
  class="group block cursor-pointer px-3 md:py-0"
>
  <li
    class="block group-hover:bg-neutral-900 py-3 my-2 pl-1 border-b border-zinc-400/60 transition-colors"
  >
    <div class="flex flex-col">
      <div class="w-full flex flex-col gap-x-5">
        <h1
          class="pb-0 text-3xl xl:text-xl tracking-wider font-bold uppercase group-hover:text-primary transition-colors font-mono"
        >
          {title}
        </h1>
        <p class="text-base xl:text-lg xl:tracking-wider text-neutral-500">
          {description}
        </p>
      </div>
    </div>
  </li>
</a>
