---
interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time
  class="text-second order-2 lg:order-2 text-lg md:text-xl lg:text-2xl mt-2 font-darkerGrote"
  datetime={date.toISOString()}
>
  <p>
    {
      date.toLocaleDateString("en-us", {
        year: "numeric",
        month: "short",
        day: "numeric",
      })
    }
  </p>
</time>
